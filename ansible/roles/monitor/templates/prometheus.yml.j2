global:
  evaluation_interval: 15s
  scrape_interval: 15s
  scrape_timeout: 10s

  external_labels:
    environment: ubuntu-18.10

scrape_configs:
  - job_name: prometheus
    metrics_path: /metrics
    static_configs:
    - targets:
      - localhost:9090
  - job_name: node-exporter
    metrics_path: /metrics
    static_configs:
    - targets:
      - node_exporter:9100
  - job_name: bernard
    metrics_path: /metrics.txt
    static_configs:
    - targets:
      - {{ bernard_host }}:80
  - job_name: gitea
    metrics_path: /gitea/metrics
    static_configs:
    - targets:
      - maxwittig.xyz:80
